        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/avatarone"
                android:layout_margin="8dp"
                />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueAsUser"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:cornerRadius="32dp"
                    android:backgroundTint="@color/teal_200"
                   android:fontFamily="@font/alegreya"
                   android:text="@string/sing_up_as_user"
                   android:textSize="18sp"
                   android:textColor="@color/white"
                   android:textAllCaps="true"
                   android:layout_margin="16dp" />
                </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account"
            android:fontFamily="@font/andada"
            android:textSize="16dp"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/signInAsUser"
               android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_as_user"
                android:fontFamily="@font/andada"
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:textColor="@color/purple_200"
                android:layout_width="0dp"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/signInAsDriver"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_as_driver"
                android:fontFamily="@font/andada"
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:textColor="@color/teal_700"
                android:gravity="center"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>