<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/endRideBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Finish"
                android:textSize="20sp"
                android:textColor="#000"
                android:fontFamily="@font/alegreya"
                android:gravity="center_horizontal"
                app:drawableStartCompat="@drawable/ic_outline_arrow_back_24"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="8dp"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:padding="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/alegreya"
                    android:text="Cash"
                    android:textColor="#474747"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    />
                <TextView
                    android:id="@+id/endRideFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/alegreya"
                    android:text="GHÂ¢ 9.45"
                    android:textColor="#000"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="How was your ride?"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="#000"
                    />

                <RatingBar
                    android:id="@+id/endRideRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="3"
                    android:layout_margin="8dp"
                    />

                <TextView
                    android:id="@+id/endRideRatingScale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:text="Awesome, I love it"
                    android:fontFamily="@font/alegreya"
                    android:textColor="#333333"

                    />


                <EditText
                    android:id="@+id/endRideFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:hint="Tell us what you loved"
                    android:gravity="top"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/alegreya"
                    android:textSize="18sp"
                    />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/endRideDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="32dp"
                    android:backgroundTint="@color/teal_200"
                    android:fontFamily="@font/andika"
                    android:text="Send"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="40dp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>





</LinearLayout>