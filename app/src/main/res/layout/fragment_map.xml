<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.gms.maps.MapView
        android:id="@+id/chaseMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/showCoords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:fontFamily="@font/alegreya"
            android:textSize="16sp"
            />
    </LinearLayout>


<!--    1-->
<!--     Where are you going-->
        <LinearLayout
            android:id="@+id/goingWhereContainer"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bback"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="34dp"
             android:visibility="invisible"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/where_are_you_going"
                android:fontFamily="@font/alegreya"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/goingWhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="32dp"
                android:backgroundTint="@color/teal_200"
                android:fontFamily="@font/andika"
                android:text="Search destination"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:textStyle="bold"

                app:icon="@drawable/ic_baseline_search_24"
                app:iconTint="@color/white"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/holderTravelHistory"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"

                />
        </LinearLayout>




<!--    2-->
<!--    internet connectivity-->
    <LinearLayout
        android:id="@+id/enableInternetContainer"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_settings_24"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable internet"
            android:fontFamily="@font/alegreya"
            android:textSize="24dp"
            android:textColor="#333"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can't connect to internet. Please check your network settings and try again"
            android:textSize="18sp"
            android:textColor="#474747"
            android:fontFamily="@font/alegreya"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/tryAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="32dp"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/andika"
            android:text="Try again"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_margin="32dp"
            android:padding="8dp"
            android:textStyle="bold"
            />
    </LinearLayout>






<!--3-->
    <!--        ride options select-->
    <LinearLayout
        android:id="@+id/rideOptionsContainer"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bback"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select ride"
            android:fontFamily="@font/alegreya"
             android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#333"

            />


        <LinearLayout
            android:id="@+id/carOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="4dp"
            android:background="@drawable/cback"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_directions_car_24"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chase"
                    android:textColor="#333"
                    android:textSize="20sp"
                    android:fontFamily="@font/alegreya"
                    />
                <TextView
                    android:id="@+id/carTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 min"
                    android:fontFamily="@font/alegreya"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/carPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GH¢ 12"
                    android:textColor="#333"
                    android:textSize="20sp"
                    android:fontFamily="@font/alegreya"
                    />
                <TextView
                    android:id="@+id/carPreviousPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chase"
                    android:fontFamily="@font/alegreya"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cycleOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="4dp"
            android:background="@drawable/aback"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_directions_bike_24"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pragya"
                    android:textColor="#333"
                    android:textSize="20sp"
                    android:fontFamily="@font/alegreya"
                    />
                <TextView
                    android:id="@+id/cycleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 min"
                    android:fontFamily="@font/alegreya"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                >
                <TextView
                    android:id="@+id/cyclePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GH¢ 5"
                    android:textColor="#333"
                    android:textSize="20sp"
                    android:fontFamily="@font/alegreya"
                    />
                <TextView
                    android:id="@+id/cyclePreviousPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chase"
                    android:fontFamily="@font/alegreya"
                    />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/optionCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="32dp"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/andika"
            android:text="Back"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:textStyle="bold"
            />



    </LinearLayout>



<!--4-->
<!--    request ride-->
    <LinearLayout
        android:id="@+id/rideRequestContainer"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"
        >
        <ImageView
            android:id="@+id/rideImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_directions_car_24"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requesting ride"
            android:fontFamily="@font/alegreya"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            />
        <ProgressBar
            android:id="@+id/requestProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/requestCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="32dp"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/andika"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:padding="8dp"
            android:textStyle="bold"
            />
    </LinearLayout>




<!--5-->
<!--    driver arrives widgets-->
    <LinearLayout
        android:id="@+id/forUserDriverArrivesContainer"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bback"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/forUserDriverArrivesTime"
            android:text="Driver arrives in 2 min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:textColor="#000"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:padding="8dp"
                >
                <TextView
                    android:id="@+id/forUserRideDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chevrolet Kalos"
                    android:textSize="18sp"
                    android:fontFamily="@font/alegreya"
                    />
                <TextView
                    android:id="@+id/forUserRideNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AS 1257-17"
                    android:textSize="20sp"
                    android:textColor="#333"
                    android:fontFamily="@font/alegreya"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_driver_50"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:padding="8dp"
                />

        </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:padding="4dp"
                >
                <TextView
                    android:id="@+id/forUserDriverFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your driver is EBENEZER"
                    android:textSize="20sp"
                    android:textColor="#333"
                    android:fontFamily="@font/alegreya"
                    />
                <TextView
                    android:id="@+id/forUserDriverFinishedRides"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 finished rides"
                    android:textSize="18sp"
                    android:fontFamily="@font/alegreya" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/forUserChangeRide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="32dp"
                    android:backgroundTint="#f5f5f5"
                    android:fontFamily="@font/andika"
                    android:text="Change"
                    android:textColor="#707070"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/forUserFinishRide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="32dp"
                    android:backgroundTint="@color/teal_200"
                    android:fontFamily="@font/andika"
                    android:text="Finish"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




<!--6-->
    <!--    for driver-->
    <LinearLayout
        android:id="@+id/forDriverPickingContainer"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bback"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/forDriverPickingMsg"
            android:text="Picking up user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:textColor="#474747"
            />


        <LinearLayout
            android:id="@+id/driverPassContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firstname "
                android:textSize="18sp"
                android:fontFamily="@font/alegreya"
                />
            <TextView
                android:id="@+id/forDriverUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Ebenezer"
                android:textSize="18sp"
                android:fontFamily="@font/andika"
                android:textColor="#474747"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/driverPointContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry Point"
                    android:textSize="18sp"
                    android:fontFamily="@font/alegreya"
                    />

                <TextView
                    android:id="@+id/forDriverUserEntryPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tafo Ahenbronum"
                    android:textSize="18sp"
                    android:textColor="#474747"
                    android:fontFamily="@font/andika"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_alignParentEnd="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit Point"
                    android:textSize="18sp"
                    android:fontFamily="@font/alegreya"
                    />
                <TextView
                    android:id="@+id/forDriverUserExitPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashtown"
                    android:textSize="18sp"
                    android:textColor="#474747"
                    android:fontFamily="@font/andika"
                    />
            </LinearLayout>

        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/forDriverCallUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="32dp"
            android:backgroundTint="@color/teal_200"
            android:fontFamily="@font/andika"
            android:text="Call"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_margin="16dp"
            />

    </LinearLayout>




</RelativeLayout>