        <LinearLayout
            android:id="@+id/driverAcceptRideContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginBottom="30dp">
                <ProgressBar
                    android:id="@+id/watingForAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/forDriverUserFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ebenezer"
                        android:fontFamily="@font/andika"
                        android:textColor="#474747"
                        android:textSize="20sp"
                        android:layout_gravity="center" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="start :"
                        android:fontFamily="@font/alegreya"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:id="@+id/acceptEntryLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Old Tafo station"
                        android:fontFamily="@font/andika"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="end :"
                        android:fontFamily="@font/alegreya"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:id="@+id/acceptExitLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atimatim"
                        android:fontFamily="@font/andika"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup :"
                        android:fontFamily="@font/alegreya"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp" />
                    <TextView
                        android:id="@+id/acceptDistanceToUserPickUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:fontFamily="@font/andika"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>


                <!--             Accept / Decline-->
                <LinearLayout
                    android:id="@+id/acceptOrDeclineRide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="visible"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/driverAcceptRide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="32dp"
                            android:backgroundTint="@color/teal_200"
                            android:fontFamily="@font/andika"
                            android:text="Accept"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/driverDeclineRide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="32dp"
                            android:backgroundTint="@color/teal_200"
                            android:fontFamily="@font/andika"
                            android:text="Decline"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


<!--                start // call-->
                <LinearLayout
                    android:id="@+id/callOrStartRide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/callUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="32dp"
                            android:backgroundTint="@color/teal_200"
                            android:fontFamily="@font/andika"
                            android:text="call"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/driverStartRide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="32dp"
                            android:backgroundTint="@color/teal_200"
                            android:fontFamily="@font/andika"
                            android:text="Start"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




<!--        ending ride-->
        <LinearLayout
            android:id="@+id/driverEndRidContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
            <TextView
                android:id="@+id/endDestinationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 mins"
                android:fontFamily="@font/alegreya"
                android:textColor="#333"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                />
            <TextView
                android:id="@+id/endExitLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atimatim"
                android:fontFamily="@font/andika"
                android:textColor="#333"
                android:textSize="18sp"
                android:layout_marginStart="32dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/endDriverEndRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="32dp"
                android:backgroundTint="#ed2939"
                android:fontFamily="@font/andika"
                android:text="End ride"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:layout_margin="16dp"
                android:textStyle="bold"
                app:icon="@drawable/ic_baseline_double_arrow_24"
                app:iconTint="#fff"
                />

        </LinearLayout>



<!--        driver default page-->
        <LinearLayout
            android:id="@+id/driverGoOnlineContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:visibility="gone"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/driverGoOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:fontFamily="@font/andika"
                android:text="Go online"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_baseline_double_arrow_24"
                app:iconTint="#fff"
                android:padding="16dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toaday's Earnings"
                        android:fontFamily="@font/alegreya"
                        android:textColor="#707070"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/driverTodayEarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GH¢ 50.45"
                        android:fontFamily="@font/alegreya"
                        android:textColor="@color/purple_500"
                        android:textSize="25sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/driverShowEarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earnings"
                    android:layout_alignParentEnd="true"
                    app:drawableEndCompat="@drawable/go_arrow"
                    android:fontFamily="@font/alegreya"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:layout_margin="16dp" />
