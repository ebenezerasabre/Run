<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapRelLayout"
    >

    <com.google.android.gms.maps.MapView
        android:id="@+id/chaseMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/homeExtraFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:icon="@drawable/ic_baseline_view_headline_24"
        android:backgroundTint="@color/teal_200"
        android:textColor="#fff"
        app:iconTint="#fff"
        android:textSize="16sp"
        android:textAllCaps="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/showCoords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:fontFamily="@font/alegreya"
            android:textSize="16sp"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/userRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        >


        <!--    1-->
        <!--     Where are you going-->
        <LinearLayout
            android:id="@+id/goingWhereContainer"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="34dp"
            android:visibility="gone"
            >

            <ProgressBar
                android:id="@+id/mapLoadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                />

<!--            android:background="@drawable/bback"-->
            <TextView
                android:id="@+id/textGoingWhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/where_are_you_going"
                android:fontFamily="@font/alegreya"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:visibility="invisible"
                />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/goingWhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="32dp"
                android:backgroundTint="@color/teal_200"
                android:fontFamily="@font/andika"
                android:text="@string/search_destination"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:textStyle="bold"
                app:icon="@drawable/ic_baseline_search_24"
                app:iconTint="@color/white"
                android:visibility="invisible"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/holderTravelHistory"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:visibility="gone"
                />
        </LinearLayout>




        <!--    2-->
        <!--    internet connectivity-->
        <LinearLayout
            android:id="@+id/enableInternetContainer"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_settings_24"
                android:layout_gravity="center_horizontal"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_internet"
                android:fontFamily="@font/alegreya"
                android:textSize="24sp"
                android:textColor="#333"
                android:gravity="center_horizontal"
                android:layout_margin="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/can_t_connect_to_internet_please_check_your_network_settings_and_try_again"
                android:textSize="18sp"
                android:textColor="#474747"
                android:fontFamily="@font/alegreya"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tryAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="32dp"
                android:backgroundTint="@color/teal_200"
                android:fontFamily="@font/andika"
                android:text="Try again"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_margin="32dp"
                android:padding="8dp"
                android:textStyle="bold"
                />

        </LinearLayout>




        <!--3-->
        <!--        ride options select-->
        <LinearLayout
